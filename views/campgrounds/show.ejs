<%- include("../partials/header"); -%>

<div class="container">

    <div class="row">
        <div class="col-md-3">
            <a href="/campgrounds"><p class="lead">Back to all camps</p></a>
            <div class="list-group">
                <li class="list-group-item">Info 1</li>
                <li class="list-group-item active">Info 2</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card" >
                <img src="<%= campground.image %>" class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title"> <a href="#"> <%= campground.name  %></a> <span class="card-subtitle mb-2 text-muted float-right"><h6>Rs <%= campground.price %> / night</h6></span>  </h5>
                  <p class="card-text"><%= campground.description %></p>
                  <p class="card-text"> <em>Submitted by <strong><%= campground.author.username %> </strong> </em> </p>
               
            <% if( currentUser && campground.author.id.equals(currentUser._id) ){ %>
                     <a href="/campgrounds/<%= campground._id %>/edit" class="btn btn-warning">Edit</a>
                     <form style="display: inline;" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-xs btn-danger">Delete</button></form>
            <% } %>
            </div>
              </div>

              <div class="card card-body bg-light" style="margin-top: 10px;">
                
                <div class="text-right"><a href="/campgrounds/<%= campground._id %>/comments/new" class="btn btn-success">Add Comment</a></div>
                 <hr>
                 <% campground.comments.forEach(function(comment){ %>
                        
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %> </strong>
                            <span class="float-right"> 10 days ago </span>
                            <p>
                                <%= comment.text %> <br>
                            
                            </p>  
                        </div>

                    

                    </div>
                    <% }) %>   

           </div>
        </div>
    </div>

</div>





<%- include("../partials/footer"); -%>